<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verifikasi">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_code_verification">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Verifikasi no. telpon anda"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/code_v"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/border_btn_gradient"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Masukan code verifikasi" />


            <Button
                android:id="@+id/verifikasi"
                android:padding="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:drawableRight="@drawable/ic_new_releases_white"
                android:textColor="@android:color/white"
                android:text="Verifikasi"
                android:layout_weight="1"
                android:background="@drawable/btn_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:visibility="gone"
                android:id="@+id/resend"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:drawableRight="@drawable/ic_new_releases_white"
                android:textColor="@android:color/white"
                android:text="Resend"
                android:layout_weight="1"
                android:background="@drawable/btn_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="24dp"
                android:text="0.0"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>